

<div class="container">

  <div class="box">
    <h1>Cocktails for inspiration:</h1>
    <div class="row">

        <% @cocktails.each do |cocktail| %>
          <%= render 'cocktails/components/cards', cocktail: cocktail %>
        <% end %>

    </div>

    <div class="btn-div" id="btn-show-top">
      <%= link_to "The Inspiration Hub!", cocktails_path %>
    </div>
    <div class="btn-div">
      <%=link_to raw("Cocktail Creation Station <i class='fas fa-rocket'></i>"), new_cocktail_path %>
    </div>
  </div>
</div>

